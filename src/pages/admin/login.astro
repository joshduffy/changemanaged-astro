---
import "../../styles/global.css";
import { SignIn } from "@clerk/astro/components";

// Check if already authenticated - redirect to admin if so
const { userId } = Astro.locals.auth();
if (userId) {
  return Astro.redirect("/admin");
}

export const prerender = false;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="noindex, nofollow" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <title>Admin Login | Change Managed</title>
  </head>
  <body class="antialiased bg-linen min-h-screen flex items-center justify-center">
    <div class="w-full max-w-md p-8">
      <!-- Logo -->
      <div class="text-center mb-8">
        <a href="/" class="inline-flex items-center gap-2 text-charcoal">
          <svg
            class="w-10 h-10"
            viewBox="0 0 32 32"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              d="M16 4L28 28H4L16 4Z"
              stroke="#2D5F4F"
              stroke-width="1.5"
              stroke-linejoin="miter"
              stroke-linecap="square"
              fill="none"
            />
          </svg>
          <span class="text-xl font-semibold">Change Managed</span>
        </a>
        <p class="text-graphite mt-2">Admin Panel</p>
      </div>

      <!-- Clerk SignIn Component -->
      <div class="flex justify-center">
        <SignIn
          forceRedirectUrl="/admin"
          signUpUrl="/admin/login"
        />
      </div>

      <p class="mt-6 text-center text-xs text-graphite">
        <a href="/" class="hover:text-deep-sage transition-colors">&larr; Back to website</a>
      </p>
    </div>
  </body>
</html>
