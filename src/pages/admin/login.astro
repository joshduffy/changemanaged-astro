---
import "../../styles/global.css";

// Check if already logged in
const sessionToken = Astro.cookies.get("admin_session")?.value;
if (sessionToken) {
  // Validate session - if valid, redirect to dashboard
  const apiUrl = import.meta.env.SURVEY_API_URL || "https://survey.changemanaged.io";
  try {
    const response = await fetch(`${apiUrl}/api/admin/auth`, {
      headers: { Authorization: `Bearer ${sessionToken}` },
    });
    if (response.ok) {
      return Astro.redirect("/admin");
    }
  } catch {
    // Session invalid, continue to login
  }
}

// Handle form submission
let error = "";
let success = "";

if (Astro.request.method === "POST") {
  const formData = await Astro.request.formData();
  const email = formData.get("email")?.toString().trim().toLowerCase();
  const adminEmail = import.meta.env.ADMIN_EMAIL?.toLowerCase();

  // Support multiple admin emails (comma-separated)
  const adminEmails = (import.meta.env.ADMIN_EMAILS || import.meta.env.ADMIN_EMAIL || "")
    .toLowerCase()
    .split(",")
    .map((e: string) => e.trim())
    .filter(Boolean);

  if (!email) {
    error = "Please enter your email address.";
  } else if (!adminEmails.includes(email)) {
    // Don't reveal if email exists - still show success message
    success = "If this email is authorized, a login link has been sent.";
  } else {
    // Send magic link via survey API
    const apiUrl = import.meta.env.SURVEY_API_URL || "https://survey.changemanaged.io";
    try {
      const response = await fetch(`${apiUrl}/api/admin/auth?action=magic-link`, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          email,
          redirectUrl: `${Astro.url.origin}/admin/auth/callback`,
        }),
      });

      if (response.ok) {
        success = "Check your email for a login link. It expires in 15 minutes.";
      } else {
        error = "Unable to send login link. Please try again.";
      }
    } catch {
      error = "Unable to send login link. Please try again.";
    }
  }
}

export const prerender = false;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="noindex, nofollow" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <title>Admin Login | Change Managed</title>
  </head>
  <body class="antialiased bg-linen min-h-screen flex items-center justify-center">
    <div class="w-full max-w-md p-8">
      <!-- Logo -->
      <div class="text-center mb-8">
        <a href="/" class="inline-flex items-center gap-2 text-charcoal">
          <svg
            class="w-10 h-10"
            viewBox="0 0 32 32"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              d="M16 4L28 28H4L16 4Z"
              stroke="#2D5F4F"
              stroke-width="1.5"
              stroke-linejoin="miter"
              stroke-linecap="square"
              fill="none"
            />
          </svg>
          <span class="text-xl font-semibold">Change Managed</span>
        </a>
        <p class="text-graphite mt-2">Admin Panel</p>
      </div>

      <!-- Login Card -->
      <div class="bg-cream rounded-xl border border-stone/30 p-8 shadow-sm">
        <h1 class="text-xl font-semibold text-charcoal mb-6 text-center">Sign In</h1>

        {
          error && (
            <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg text-red-700 text-sm">
              {error}
            </div>
          )
        }

        {
          success && (
            <div class="mb-6 p-4 bg-green-50 border border-green-200 rounded-lg text-green-700 text-sm">
              {success}
            </div>
          )
        }

        {
          !success && (
            <form method="POST" class="space-y-6">
              <div>
                <label for="email" class="block text-sm font-medium text-charcoal mb-2">
                  Email Address
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  placeholder="you@example.com"
                  class="w-full px-4 py-3 rounded-lg border border-stone/50 bg-white focus:border-deep-sage focus:ring-2 focus:ring-deep-sage/20 outline-none transition-colors"
                />
              </div>

              <button
                type="submit"
                class="w-full bg-deep-sage text-white py-3 px-4 rounded-lg font-medium hover:bg-muted-sage transition-colors"
              >
                Send Login Link
              </button>
            </form>
          )
        }

        <p class="mt-6 text-center text-sm text-graphite">
          We'll send you a magic link to sign in.<br />No password needed.
        </p>
      </div>

      <p class="mt-6 text-center text-xs text-graphite">
        <a href="/" class="hover:text-deep-sage transition-colors">&larr; Back to website</a>
      </p>
    </div>
  </body>
</html>
