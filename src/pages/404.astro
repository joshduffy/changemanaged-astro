---
import Layout from '../layouts/Layout.astro';
import Nav from '../components/Nav.astro';

export const prerender = true;
---

<Layout
  title="Page Not Found | Change Managed"
  description="The page you're looking for doesn't exist."
  canonicalUrl="https://changemanaged.io/404"
>
  <Nav />

  <main class="pt-32 pb-20 px-6 bg-cream min-h-screen flex items-center justify-center">
    <div class="max-w-2xl mx-auto text-center">
      <!-- Delta Symbol -->
      <svg class="w-24 h-24 mx-auto mb-8 text-stone" viewBox="0 0 32 32" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M16 4L28 28H4L16 4Z" stroke="currentColor" stroke-width="1.5" stroke-linejoin="miter" fill="none" />
      </svg>

      <h1 class="text-5xl md:text-6xl font-light text-charcoal mb-4">404</h1>
      <p class="text-xl text-graphite mb-8">
        The page you're looking for doesn't exist or has been moved.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/"
          class="inline-flex items-center justify-center gap-2 bg-charcoal text-cream px-6 py-3 rounded hover:bg-deep-sage transition-colors"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>
          Back to Home
        </a>
        <a
          href="/insights"
          class="inline-flex items-center justify-center gap-2 border border-charcoal text-charcoal px-6 py-3 rounded hover:bg-charcoal hover:text-cream transition-colors"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          Read Insights
        </a>
      </div>
    </div>
  </main>
</Layout>
