---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Nav from '../../components/Nav.astro';

const posts = await getCollection('insights');

// Sort by date (newest first) - parse month/year format
const sortedPosts = posts.sort((a, b) => {
  const dateA = new Date(a.data.date);
  const dateB = new Date(b.data.date);
  return dateB.getTime() - dateA.getTime();
});
---

<Layout title="Insights | Change Managed">
  <Nav />

  <main class="pt-32 pb-20 px-6 bg-cream min-h-screen">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-4xl md:text-5xl font-light text-charcoal mb-4">Insights</h1>
      <p class="text-xl text-graphite mb-12 max-w-2xl">
        Practical perspectives from the field of transformation.
      </p>

      <div class="space-y-6">
        {sortedPosts.map((post) => (
          <a href={`/insights/${post.id}`} class="block card-hover bg-white rounded-lg p-8 border border-gray-100 group">
            <article>
              <h2 class="text-xl font-medium text-charcoal mb-3 group-hover:text-deep-sage transition-colors">
                {post.data.title}
              </h2>

              <div class="flex items-center gap-4 text-sm text-taupe mb-4">
                <span class="flex items-center gap-1">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                  {post.data.date}
                </span>
                <span class="flex items-center gap-1">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  {post.data.readTime}
                </span>
              </div>

              <p class="text-graphite mb-4">{post.data.excerpt}</p>

              <span class="inline-flex items-center gap-2 text-charcoal group-hover:text-deep-sage transition-colors">
                Read More
                <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </span>
            </article>
          </a>
        ))}
      </div>
    </div>
  </main>
</Layout>
