---
import '../styles/global.css';

interface Props {
  title?: string;
}

const { title = 'Change Managed | Complex transformation. Simple execution.' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Change Managed helps organizations navigate complex transformations with simple, proven execution strategies." />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Inter Font - weights 300, 400, 500, 600, 700 -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />

    <!-- Umami Analytics -->
    <script defer src="https://umami-changemanaged.vercel.app/script.js" data-website-id="0a7e8725-bc93-4d05-b2d4-0d2be01a3793"></script>

    <!-- Google Analytics 4 -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-H55HMN28VL"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-H55HMN28VL');
    </script>

    <title>{title}</title>
  </head>
  <body class="antialiased">
    <slot />
  </body>
</html>
