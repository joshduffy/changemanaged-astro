---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  canonicalUrl?: string;
  ogImage?: string;
  ogType?: 'website' | 'article';
  publishedDate?: string;
}

const {
  title = 'Change Managed | Complex transformation. Simple execution.',
  description = 'Change Managed helps organizations navigate complex transformations with simple, proven execution strategies. Expert M&A integration, change management, and organizational design consulting.',
  canonicalUrl = 'https://changemanaged.io',
  ogImage = '/og-image.svg',
  ogType = 'website',
  publishedDate,
} = Astro.props;

const siteUrl = 'https://changemanaged.io';
const fullOgImage = ogImage.startsWith('http') ? ogImage : `${siteUrl}${ogImage}`;

// Organization schema for all pages
const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "ProfessionalService",
  "name": "Change Managed",
  "description": "M&A integration and change management consulting",
  "url": "https://changemanaged.io",
  "logo": "https://changemanaged.io/favicon.svg",
  "serviceType": ["Change Management Consulting", "M&A Integration", "Organizational Design"],
  "areaServed": "Worldwide",
  "sameAs": ["https://www.linkedin.com/company/change-managed-io"]
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="author" content="Change Managed" />
    <meta name="robots" content="index, follow" />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Open Graph -->
    <meta property="og:type" content={ogType} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:site_name" content="Change Managed" />
    <meta property="og:image" content={fullOgImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content="en_US" />
    {publishedDate && <meta property="article:published_time" content={publishedDate} />}

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={fullOgImage} />

    <!-- Inter Font with display swap for performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />

    <!-- Organization Schema -->
    <script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />

    <!-- Umami Analytics -->
    <script defer src="https://umami-changemanaged.vercel.app/script.js" data-website-id="0a7e8725-bc93-4d05-b2d4-0d2be01a3793"></script>

    <!-- Google Analytics 4 -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-H55HMN28VL"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-H55HMN28VL');
    </script>

    <title>{title}</title>
  </head>
  <body class="antialiased">
    <slot />
  </body>
</html>
