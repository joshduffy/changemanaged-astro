---
import "../../styles/global.css";

interface Props {
  title: string;
  currentPage?: string;
}

const { title, currentPage = "" } = Astro.props;

const navItems = [
  { href: "/admin", label: "Dashboard", icon: "home" },
  { href: "/admin/tokens", label: "Tokens", icon: "key" },
  { href: "/admin/surveys", label: "Surveys", icon: "clipboard" },
  { href: "/admin/export", label: "Export", icon: "download" },
];

function isActive(href: string) {
  if (href === "/admin") {
    return currentPage === "dashboard" || currentPage === "";
  }
  return currentPage === href.split("/").pop();
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="noindex, nofollow" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <title>{title} | Admin</title>
  </head>
  <body class="antialiased bg-linen">
    <div class="flex min-h-screen">
      <!-- Sidebar -->
      <aside class="w-64 bg-charcoal text-cream flex flex-col">
        <!-- Logo -->
        <div class="p-6 border-b border-graphite">
          <a href="/" class="flex items-center gap-2 text-cream hover:text-white">
            <svg
              class="w-7 h-7"
              viewBox="0 0 32 32"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                d="M16 4L28 28H4L16 4Z"
                stroke="#FAFAF8"
                stroke-width="1.5"
                stroke-linejoin="miter"
                stroke-linecap="square"
                fill="none"
              />
            </svg>
            <span class="font-semibold">Change Managed</span>
          </a>
          <p class="text-xs text-stone mt-1">Admin Panel</p>
        </div>

        <!-- Navigation -->
        <nav class="flex-1 p-4">
          <ul class="space-y-1">
            {
              navItems.map((item) => (
                <li>
                  <a
                    href={item.href}
                    class={`flex items-center gap-3 px-4 py-3 rounded-lg transition-colors ${
                      isActive(item.href)
                        ? "bg-deep-sage text-white"
                        : "text-stone hover:bg-graphite/30 hover:text-cream"
                    }`}
                  >
                    <span class="w-5 h-5">
                      {item.icon === "home" && (
                        <svg fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                        </svg>
                      )}
                      {item.icon === "key" && (
                        <svg fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
                        </svg>
                      )}
                      {item.icon === "clipboard" && (
                        <svg fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                        </svg>
                      )}
                      {item.icon === "download" && (
                        <svg fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                        </svg>
                      )}
                    </span>
                    {item.label}
                  </a>
                </li>
              ))
            }
          </ul>
        </nav>

        <!-- User/Logout -->
        <div class="p-4 border-t border-graphite">
          <form action="/admin/logout" method="POST">
            <button
              type="submit"
              class="w-full flex items-center gap-3 px-4 py-3 rounded-lg text-stone hover:bg-graphite/30 hover:text-cream transition-colors"
            >
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
              </svg>
              Logout
            </button>
          </form>
        </div>
      </aside>

      <!-- Main Content -->
      <main class="flex-1 overflow-auto">
        <header class="bg-cream border-b border-stone/30 px-8 py-6">
          <h1 class="text-2xl font-semibold text-charcoal">{title}</h1>
        </header>
        <div class="p-8">
          <slot />
        </div>
      </main>
    </div>
  </body>
</html>
